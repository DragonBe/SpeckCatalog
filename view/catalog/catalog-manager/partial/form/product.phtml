            <? if ($product->has('images')) : ?>
                <? foreach($product->getImages() as $image) : ?>
                    <img class="img hover_fullsize" src="<?=$image->getFullPath();?>"/>
                    <? break; ?>
                <? endforeach; ?>
            <? endif; ?>
        </div>
        <div class="span6">
            <dt><?php echo $this->formLabel($form->get('name')); ?></dt>
            <dd><?php echo $this->formInput($form->get('name')); ?></dd>
