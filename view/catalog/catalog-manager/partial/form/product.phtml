            <dd><?php echo $this->formTextArea($form->get('description')); ?></dd>
        </div>
        <div class="span3">
            <? if(isset($product) && $product->isItem()) : ?>
                <span class="smallcaps">manufacturer</span><br/>
                <select name="manufacturer_company_id" class="span3">
                    <?=$this->partial($pdir.'form/select-options.phtml', array(
                        'data' => $product->getCompanies(),
                        'getIdMethod' => 'getRecordId',
                        'selectedId'  => $product->getManufacturerCompanyId(),
                        'getNameMethod' => 'getName',
                    ));?>
                </select>
                <dt><?php echo $this->formLabel($form->get('item_number')); ?></dt>
                <dd><?php echo $this->formInput($form->get('item_number')); ?></dd>
            <? endif; ?>
        </div>
    </div>

</form>
