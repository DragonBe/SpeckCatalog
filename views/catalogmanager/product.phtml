<div class="product entity">
    <h1>Product</h1>
    <div class="entities">
        <h3>Parent Shell:</h3>
        <? if($product->getParentShell()) :?>
            <? $this->shell = $product->getParentShell(); ?>
            <ul>
                <li class="shell icon"><?=$this->render('catalogmanager/partial/shell-icon.phtml'); ?></li>
            </ul>
        <? else : ?>
            <? $this->class = 'shell'; ?>
            <?=$this->render('catalogmanager/partial/add.phtml');?>
        <? endif; ?>

        <h3>Product Uoms:</h3>
        <? $this->class = 'productUom'; ?>
        <?=$this->render('catalogmanager/partial/add.phtml');?>
        <? if (count($product->getUoms()) > 0) : ?>
            <ul>
                <? foreach($product->getUoms() as $this->productUom) : ?>
                    <li class="product_uom icon"><?=$this->render('catalogmanager/partial/product-uom-icon.phtml');?></li>
                <? endforeach; ?>
            </ul>
        <? else : ?>
            (none)
        <? endif; ?>

        <h3>Manufacturer:</h3>
        <? if($product->getManufacturer()) :?>
            <? $this->company = $product->getManufacturer(); ?>
            <ul>
                <li class="company icon"><?=$this->render('catalogmanager/partial/company-icon.phtml');?></li>
            </ul>
        <? else : ?>
            <? $this->class = 'company'; ?>
            <?=$this->render('catalogmanager/partial/add.phtml');?>
        <? endif; ?>
    </div>
    <?=$this->render('catalogmanager/partial/editform.phtml');?>
    <div class="clear"></div>   
</div>
                                                        
