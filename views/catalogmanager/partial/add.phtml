
<!-- add-import -->
<? if(isset($function)) : ?>

<? 
    $string = '';
    if(isset($parentId))        $string .= 'parentid="'        . $parentId        . '" ';
    if(isset($parentClassName)) $string .= 'parentClassName="' . $parentClassName . '" ';
    if(isset($className))       $string .= 'className="'       . $className       . '" ';
    if(isset($newPartialName))  $string .= 'newPartialName="'  . $newPartialName  . '" ';
    if(isset($callback))        $string .= 'callback="'        . $callback        . '" ';

    if(!isset($name)) $name = $className; 

?>
    <? if($function === 'add-button') : ?>
        <div class="span2 add-element">
            <input type="button" <?=$string;?> callback="newPartial" class="addButton btn" value="+ <?=$name;?>"/>
        </div>
    <? endif; ?>
    <? if($function === 'add-button-ajax') : ?>
        <div class="span2 add-element"><input type="button" class="addButtonAjax btn primary"/></div>
    <? endif; ?>
    <? if($function === 'import-search') : ?>
        <div class="span2 add-element">
            <input type="text" class="span2 import-modal" <?=$string;?> placeholder="import <?=$name;?>"></input>
        </div>
    <? endif; ?>
    <? if($function === 'import-one-search') : ?>
        <div class="span2 add-element">
            <input type="text" class="span2 import-one-modal" <?=$string;?> placeholder="import <?=$name;?>"></input>
        </div>
    <? endif; ?>
    <? if($function === 'import-file') : ?>
        <div class="span2 add-element">
            <input class="input-file" type="file" placeholder="upload <?=$name; ?>"/>
        </div>
    <? endif; ?>

<? endif; ?>
